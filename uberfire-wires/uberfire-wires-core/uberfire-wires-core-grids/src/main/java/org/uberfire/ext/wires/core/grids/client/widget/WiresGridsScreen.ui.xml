<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:bs2="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:uf="urn:import:org.uberfire.ext.wires.core.grids.client.widget">

  <ui:style field="css">

    .container {
      display: flex;
      flex-direction: column;
      width: 100%;
      height: 100%;
    }

    .canvas {
      overflow: hidden;
      background-color: lightblue;
      margin: 20px 20px 20px 20px;
      border: 1px solid #f0f0f0;
      flex-grow: 1;
    }

    .controls {
      padding: 20px 20px 20px 20px;
      margin-left: 20px;
      margin-right: 20px;
      margin-bottom: 20px;
      background-color: dodgerblue;
      min-height: 170px;
    }

    .zoom {
      text-align: center;
      margin-bottom: 10px;
    }

    .renderers {
      text-align: center;
      margin-bottom: 10px;
    }

    .merged {
      margin-bottom: 10px;
    }

    .appendRow {
    }

  </ui:style>

  <g:HTMLPanel styleName="{css.container}">
    <g:HTMLPanel styleName="{css.canvas}">
      <uf:GridLienzoPanel ui:field="gridPanel"/>
    </g:HTMLPanel>
    <div class="{css.controls}">
      <g:SimplePanel styleName="{css.zoom}">
        <bs2:ListBox ui:field="zoom"/>
      </g:SimplePanel>
      <g:SimplePanel styleName="{css.renderers}">
        <bs2:ListBox ui:field="basicRendererSelector"/>
      </g:SimplePanel>
      <g:SimplePanel styleName="{css.merged}">
        <bs2:CheckBox ui:field="chkShowMerged" text="Show merged"/>
      </g:SimplePanel>
      <g:SimplePanel styleName="{css.appendRow}">
        <bs2:Button ui:field="btnAppendRow" text="Append Row"/>
      </g:SimplePanel>
    </div>
  </g:HTMLPanel>

</ui:UiBinder>